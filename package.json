{
  "name": "react_app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "watch": "webpack --watch",
    "postbuild": "cp ./public/index.html ./dist/index.html",
    "check-types": "tsc --skipLibCheck --noEmit",
    "dev": "webpack-dev-server --mode=development",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|tsx|js|json)\" .",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest ./src",
    "test:coverage": "jest ./src --coverage",
    "test:e2e": "is-ci \"test:e2e:ci\" \"test:e2e:dev\"",
    "pretest:e2e:ci": "npm run build",
    "test:e2e:ci": "start-server-and-test serve:client http://localhost:8080 test:e2e:run",
    "test:e2e:dev": "cypress open",
    "test:e2e:run": "cypress run",
    "test:watch": "jest ./src --watch",
    "setup": "npm install && npm run validate",
    "serve:client": "serve --no-clipboard --single --listen 8080 dist",
    "validate": "npm-run-all --parallel lint check-types test:coverage build",
    "tsc": "tsc --skipLibCheck --outDir ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(tsx|ts)": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-loader": "^8.1.0",
    "cypress": "^4.6.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "is-ci-cli": "^2.0.0",
    "jest": "^26.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "serve": "^11.3.1",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
