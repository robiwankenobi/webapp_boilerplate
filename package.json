{
  "name": "react_app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "postbuild": "cp ./public/index.html ./dist/index.html",
    "check-types": "tsc --skipLibCheck",
    "dev": "webpack-dev-server --mode=development",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|tsx|js|json)\" .",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "is-ci \"test:e2e:ci\" \"test:e2e:dev\"",
    "pretest:e2e:ci": "npm run build",
    "test:e2e:ci": "start-server-and-test serve:client http://localhost:8080 test:e2e:run",
    "test:e2e:dev": "cypress open",
    "test:e2e:run": "cypress run",
    "test:watch": "jest --watch",
    "setup": "npm install && npm run validate",
    "serve:client": "serve --no-clipboard --single --listen 8080 dist",
    "validate": "npm-run-all --parallel lint check-types test:coverage build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(tsx|ts)": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@testing-library/cypress": "^5.3.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "cypress": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "is-ci-cli": "^2.0.0",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "serve": "^11.3.0",
    "start-server-and-test": "^1.10.8",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
